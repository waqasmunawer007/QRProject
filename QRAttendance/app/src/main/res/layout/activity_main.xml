<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_Scroll_root"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_rot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.qr.qrattendance.ui.MainActivity">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:navigationContentDescription="@string/abc_action_bar_up_description"
        android:background="?attr/colorPrimary"


        />

   <LinearLayout
       android:layout_below="@+id/toolbar"
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"

       android:orientation="vertical">
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/header_image"
         />
    <!--   <Spinner
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:drawSelectorOnTop="true"
           android:id="@+id/week_spinner"
           android:textAlignment="center"
           android:entries="@array/week_array"
           ></Spinner> -->
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:weightSum="6"
         android:orientation="horizontal">
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight=".7"
             android:text="Student Group"/>
         <Spinner
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:drawSelectorOnTop="true"
             android:textAlignment="center"
             android:id="@+id/week1_spinner"
             android:entries="@array/week_array"
             android:layout_weight="2.3"
             style="@style/Widget.AppCompat.Spinner.Underlined"
             ></Spinner>
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight=".8"
             android:text="Date"/>
         <TextView
             android:layout_width="0dp"
             android:text="sunday,Auguest 13,2017"
             android:background="@drawable/text_view_bottom_bardor"
             android:textAlignment="center"
             android:layout_weight="2.2"
             android:layout_height="wrap_content" />
     </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="6"
           android:orientation="horizontal">
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight=".7"
               android:text="Course Name"/>
           <Spinner
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:drawSelectorOnTop="true"
               android:id="@+id/weekvv_spinner"
               android:entries="@array/week_array"
               android:layout_weight="2.3"
               style="@style/Widget.AppCompat.Spinner.Underlined"
               android:textAlignment="center"
               ></Spinner>

           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight=".8"
               android:text="Time"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:background="@drawable/text_view_bottom_bardor"
               android:layout_weight="2.2"
               android:textAlignment="center"
               android:text="12:00AM To 01:00PM"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="6"
           android:orientation="horizontal">
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="Course Code"
              android:layout_weight=".7"/>
          <EditText
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:textAlignment="center"
              android:layout_weight="2.3"/>

           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight=".8"
               android:text="Class Location"/>
           <Spinner
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:drawSelectorOnTop="true"
               android:id="@+id/weekvvvg_spinner"
               android:entries="@array/week_array"
               android:layout_weight="2.2"
               android:textAlignment="center"
               style="@style/Widget.AppCompat.Spinner.Underlined"
               ></Spinner>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="6"
           android:orientation="horizontal">
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight=".7"
               android:text="Badge"/>
           <Spinner
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:drawSelectorOnTop="true"
               android:id="@+id/weekvvvgg_spinner"
               android:entries="@array/week_array"
               android:layout_weight="2.3"
               android:textAlignment="center"
               style="@style/Widget.AppCompat.Spinner.Underlined"
               ></Spinner>

       </LinearLayout>

          <!--  Attendace Table -->


       <TableLayout android:layout_height="match_parent"
           android:layout_width="match_parent"
           android:id="@+id/readings_tableLayout"
           android:orientation="vertical"
           android:layout_marginTop="5dp"
           android:padding="5dp"
           android:showDividers="middle"
           android:divider="?android:attr/dividerHorizontal">
           <!-- table header row -->
           <TableRow android:id="@+id/table_header"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:weightSum="5"
           android:orientation="horizontal"
           android:visibility="invisible">
               <!-- Counter-->
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:id="@+id/reading_id"
               android:textColor="@color/colorPrimary"
               android:textSize="@dimen/row_item_font_size"
               android:layout_weight="0.5"
               android:text="No"
               android:background="@drawable/cell_shape"
               android:gravity="center"/>

           <!-- Student Names -->
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:id="@+id/reading_date"
               android:background="@drawable/cell_shape"
               android:textColor="@android:color/black"
               android:textSize="@dimen/row_item_font_size"
               android:layout_weight="2.1"
               android:text="Name of Student"
               android:gravity="center"/>
           <!-- Student Number -->
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:id="@+id/reading_value"
               android:textColor="@android:color/holo_red_dark"
               android:textSize="@dimen/row_item_font_size"
               android:background="@drawable/cell_shape"
               android:layout_weight="1.2"
               android:text="Student's Number"
               android:gravity="center"/>
           <!-- Student Badge -->
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:id="@+id/reading_exp"
               android:textColor="@android:color/black"
               android:textSize="@dimen/row_item_font_size"
               android:background="@drawable/cell_shape"
               android:text="Student's Badge"
               android:layout_weight="1.2"
               android:gravity="center"/>

       </TableRow>
       </TableLayout>



          <!-- Below the Attandace Table Area -->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/TableBlowPortion_linearLayout"
               android:visibility="invisible"
               android:weightSum="1"

               android:orientation="horizontal">
               <!-- signare canvas -->
               <RelativeLayout
                   android:layout_weight=".5"
                   android:layout_width="0dp"
                   android:layout_height="90dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:text="Signature"
                       android:id="@+id/showCanvasLable_TextView"
                       android:layout_height="90dp"
                       android:onClick="ConVaseVisibility"/>
               <com.qr.qrattendance.CustomViews.SignatureView
                   android:id="@+id/sinatureView"
                   android:layout_width="match_parent"
                   android:visibility="invisible"
                   android:layout_height="90dp" />
               </RelativeLayout>
               <Button
                   android:layout_width="0dp"
                   android:layout_height="90dp"
                   android:layout_weight=".5"
                   android:id="@+id/savePDF_btn"
                   android:text="Save PDF"/>
           </LinearLayout>




   </LinearLayout>
</RelativeLayout>
</ScrollView>